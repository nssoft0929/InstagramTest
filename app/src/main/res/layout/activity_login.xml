<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <View
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_centerInParent="true"/>

    <EditText
        android:id="@+id/et_PW"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/space"
        android:layout_centerHorizontal="true"
        android:hint="@string/et_PW"
        android:textSize="14sp"
        android:inputType="text"
        android:singleLine="true"/>
    <EditText
        android:id="@+id/et_ID"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_PW"
        android:layout_centerHorizontal="true"
        android:hint="@string/et_ID"
        android:textSize="14sp"
        android:inputType="text"
        android:singleLine="true"/>
    <com.nssoft.instagramtest.Font_billabong_TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instagram"
        android:layout_above="@+id/et_ID"
        android:gravity="center"
        android:textSize="60sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_Login"
        android:layout_width="350dp"
        android:layout_height="56dp"
        android:text="로그인"
        android:layout_below="@+id/space"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:clickable="false"
        android:onClick="click_login"/>
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_Login">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인 상세 정보를 잊으셨나요? "
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인 도움말 보기."
            android:textColor="#000000"
            android:textSize="12sp"
            android:clickable="true"
            android:textStyle="bold"/>
    </LinearLayout>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/linear1"
        android:layout_centerHorizontal="true"/>
    
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/login_button"
        android:layout_centerHorizontal="true">
        
        <View
            android:layout_width="150dp"
            android:layout_height="1dp"
            style="@style/Divider"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="또는"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <View
            android:layout_width="150dp"
            android:layout_height="1dp"
            style="@style/Divider"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/linear2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정이 없으신가요? "
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가입하기."
            android:textSize="12sp"
            android:textColor="#000000"
            android:clickable="true"
            android:textStyle="bold"/>
    </LinearLayout>


</RelativeLayout>