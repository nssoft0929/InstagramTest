<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/iv_profile"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tv_profileName_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_profile"
        android:text="instagram"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/iv_option"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_more_vert_black_24dp"
        android:padding="6dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="4dp"/>

    <ImageView
        android:id="@+id/iv_content"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/iv_profile"
        android:layout_marginTop="8dp"
        android:src="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/iv_heart"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/iv_content"
        android:src="@drawable/ic_favorite_border_black_24dp"
        android:layout_margin="8dp"/>

    <ImageView
        android:id="@+id/iv_comment"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/iv_content"
        android:layout_toRightOf="@id/iv_heart"
        android:src="@drawable/ic_sms_black_24dp"
        android:layout_margin="8dp"
        android:padding="2dp"/>

    <ImageView
        android:id="@+id/iv_sendDM"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/iv_content"
        android:layout_toRightOf="@id/iv_comment"
        android:src="@drawable/send"
        android:layout_margin="8dp"
        android:padding="2dp"/>

    <TextView
        android:id="@+id/tv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_heart"
        android:layout_marginLeft="8dp"
        android:text="좋아요 12,345개"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_profileName_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_like"
        android:layout_marginLeft="8dp"
        android:text="instagram"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="13sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_profileName_content"
        android:layout_below="@+id/tv_like"
        android:layout_marginLeft="4dp"
        android:text="Hello, Instagram"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_profileName_content"
        android:layout_marginLeft="8dp"
        android:text="댓글 1,000개 모두 보기"
        android:textSize="13sp"/>






</RelativeLayout>